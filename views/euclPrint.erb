<svg version="1.1" baseProfile="full"
 width="700" height="700"
 viewbox="-<%= @maxNorm %> -<%= @maxNorm %> <%= 2*@maxNorm %> <%= 2*@maxNorm %>"
 xmlns="http://www.w3.org/2000/svg">
    <% cti = 0 %>
    <% @tri.list.each do |t| %>
      <% if params.has_key?(:col) %>
        <% cti += 1 %>
      <% end %>
      <polygon points="<%= t.p1[0] %>,<%= t.p1[1] %>,<%= t.p2[0] %>,<%= t.p2[1] %>,<%= t.p3[0] %>,<%= t.p3[1] %>" style="fill:<%=@col[cti]%>;stroke:black;stroke-width:0.05" />
    <% end %>
    <!--
      <rect x="<%= -@maxNorm %>" y="<%= -@maxNorm %>" width="<%= 2*@maxNorm %>" height="<%= 2*@maxNorm %>" style="fill:none;stroke:black;stroke-width:.1" />
    -->
</svg>
